{
  "type": "module",
  "scripts": {
    "build": "yarn run clean && tsc --declaration",
    "clean": "rm -rf dist/*.js dist/*.d.ts build .nyc_output build coverage doc; mkdir build",
    "cover": "yarn test && nyc report --reporter=lcov",
    "doc": "node_modules/.bin/typedoc --mode modules --out doc src typings",
    "pub": "yarn build && yarn publish --registry http://localhost:4873",
    "test": "rm -rf build && mkdir build && tsc -p test && nyc mocha build/test/*.js",
    "run": "node ./dist/minesweeper.main.js"
  },
  "dependencies": {
    "@loopback/metadata": "^1.0.1",
    "@nestjs/common": "^5.4.1",
    "@nestjs/core": "^5.4.1",
    "@nestjs/cqrs": "^5.1.1",
    "@nestjs/jwt": "^0.2.0",
    "@nestjs/mongoose": "^5.2.2",
    "class-transformer": "^0.1.9",
    "class-transformer-validator": "^0.6.0",
    "class-validator": "^0.9.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fluent-interface-builder": "^2.0.1",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.2.0",
    "itoa": "^1.0.2",
    "mongoose": "^5.7.5",
    "ndarray": "^1.0.18",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "simplytyped": "^1.6.0",
    "tslib": "^1",
    "uuid": "^3.3.2",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.1",
    "@types/chai": "^4.1.7",
    "@types/cli-color": "^0.3.29",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.3",
    "@types/ndarray": "^1.0.6",
    "@types/sinon": "^5.0.7",
    "@types/socket.io": "^2.1.0",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^3.2.1"
  }
}
